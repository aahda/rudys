---
interface Props {
  imgIndex: string;
  imgDescription: string;
}

const { imgIndex, imgDescription } = Astro.props;
---

<button
  class=`imgButton inline-block w-1/4 hover:scale-110 transition-transform`
  id={imgIndex}
>
  <img src=`/gallery/galeria${imgIndex}.webp` alt={imgDescription} />
</button>
