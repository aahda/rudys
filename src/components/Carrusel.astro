---
import Image from "astro/components/Image.astro";

import pollo3 from "/public/carrusel/pollo3.webp";
import pollo2 from "/public/carrusel/pollo2.webp";
import pollo1 from "/public/carrusel/pollo1.webp";
import principal from "/public/carrusel/principal.webp";
import pescado1 from "/public/carrusel/pescado1.webp";
import pescado2 from "/public/carrusel/pescado2.webp";
import pescado3 from "/public/carrusel/pescado3.webp";
---

<section>
  <article>
    <div
      class="swiper w-[1000px] h-[600px] px-28 mt-16 rounded-lg overflow-hidden"
    >
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={pollo3}
            alt="Imagen referencial para la tercera promoción de pollo."
          />
        </div>

        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={pollo2}
            alt="Imagen referencial para la segunda promoción de pollo."
          />
        </div>

        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={pollo1}
            alt="Imagen referencial para la primera promoción de pollo."
          />
        </div>

        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={principal}
            alt="Imagen principal del carrusel de imagenes de promociones."
          />
        </div>

        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={pescado1}
            alt="Imagen referencial para la primera promoción de pescado."
          />
        </div>

        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={pescado2}
            alt="Imagen referencial para la segunda promoción de pescado."
          />
        </div>

        <div class="swiper-slide">
          <Image
            class:list={"rounded-lg"}
            src={pescado3}
            alt="Imagen referencial para la tercera promoción de pescado."
          />
        </div>
      </div>

      <aside class="swiper-button-next"></aside>
      <aside class="swiper-button-prev"></aside>
    </div>
    <footer class="swiper-pagination"></footer>
  </article>
  <script type="module">
    import Swiper from "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs";

    const swiper = new Swiper(".swiper", {
      // init: false,

      pagination: {
        el: ".swiper-pagination",
      },

      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },

      initialSlide: 3,
    });
  </script>

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />

  <style>
    @keyframes movePrev {
      0% {
        transform: translateX(0px);
      }
      50% {
        transform: translateX(10px);
      }
      100% {
        transform: translateX(0px);
      }
    }

    .swiper-button-prev {
      animation: movePrev 3s infinite ease-in-out;
    }

    @keyframes moveNext {
      0% {
        transform: translateX(0px);
      }
      50% {
        transform: translateX(-10px);
      }
      100% {
        transform: translateX(0px);
      }
    }

    .swiper-button-next {
      animation: moveNext 3s infinite ease-in-out;
    }

    .swiper-button-next:after,
    .swiper-button-prev:after {
      font-size: 75px;
      font-weight: 900;
    }

    .swiper-pagination {
      position: static;
    }
  </style>
</section>
