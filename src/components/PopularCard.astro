---
interface Props {
  dishImg: string;
  dishTitle: string;
  dishImgDescription: string;
  dishPrice: string;
}

const { dishImg, dishTitle, dishImgDescription, dishPrice } = Astro.props;
---

<article
  class="popular w-[300px] relative overflow-hidden rounded-lg sm:w-[250px]"
>
  <header class="w-full h-[200px] object-cover overflow-hidden sm:h-[150px]">
    <img
      class="w-full h-full object-cover"
      src=`/popular/${dishImg}.webp`
      alt={dishImgDescription}
    />
  </header>
  <main class="p-4 text-center bg-white">
    <h3 class="font-bold text-xl mb-2">{dishTitle}</h3>
    <h4 class="text-red-900 font-bold text-2xl animate-agrandarPrecio">
      S/{dishPrice}
    </h4>
  </main>
</article>
